{
  "name": "shopnow-load-balancer",
  "version": "1.0.0",
  "description": "Load Balancer para e-commerce ShopNow",
  "main": "src/load-balancer.js",
  "scripts": {
    "start:server1": "node src/server.js 3001",
    "start:server2": "node src/server.js 3002",
    "start:server3": "node src/server.js 3003",
    "start:servers": "npm-run-all --parallel start:server1 start:server2 start:server3",
    "start:balancer": "node src/load-balancer.js",
    "start": "npm-run-all --parallel start:servers start:balancer",
    "test:load": "bash tests/load-test.sh",
    "simulate:failure": "node tests/simulate-failure.js"
  },
  "keywords": [
    "load-balancer",
    "ecommerce",
    "nodejs",
    "scalability"
  ],
  "author": "ShopNow Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}